<div>
  <h3>Edit movies</h3>
  <form action="/movies/{{this.findMovie._id}}/edit" method="post">

    <label for="title">Title</label>
    <input type="text" name="title" value="{{this.findMovie.title}}" />

    <br />
    <label for="genre">Genre</label>
    <input type="text" name="genre" value="{{this.findMovie.genre}}" />

    <br />
    <label for="plot">Plot</label>
    <input type="text" name="plot" value="{{this.findMovie.plot}}" />

    <br />
    <select name="cast" multiple>
      {{#each this.allCelebrities}}
        <option value="{{this._id}}">{{this.name}}</option>
      {{/each}}
    </select>

    <button>Edit</button>

  </form>

</div>